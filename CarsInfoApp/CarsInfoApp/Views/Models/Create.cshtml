@model CarsInfoApp.Models.Model

@{
    ViewData["Title"] = "Create";
}

<h3>Create Model</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
